<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_bottom_border"
    android:padding="@dimen/padding_8">

    <ImageView
        android:id="@+id/image_app"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/width_60"
        android:padding="@dimen/padding_8"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_app"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_18" />

    <Button
        android:id="@+id/btn_unload"
        android:layout_width="@dimen/width_56"
        android:layout_height="@dimen/height_36"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_corner"
        android:text="@string/txt_unload"
        android:textColor="@color/white"
        android:theme="@style/MyButton" />
</RelativeLayout>